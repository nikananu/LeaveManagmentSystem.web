@model LeaveTypeCreateVM

@{
    ViewData["Title"] = "Create Leave Type";
}

<h1>Create Leave Type</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
